datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  post  Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) // data da criação
  updatedAt DateTime @updatedAt // o prisma atualiza automaticamente quando ocorre atualização
  title     String
  content   String? //opcional
  published Boolean  @default(false)
  viewCount Int      @default(0) // campo novo
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}
